<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>选择资产</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="stylesheet" href="../../layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="../../css/public.css" media="all" />
    <style>
        .search-bar{
            margin-top: 20px;
            margin-bottom: 10px;
            padding-left: 20px;
        }
        .search-bar .distance{
            margin-left: 5px;
            margin-right: 10px;
            width: 250px;
        }
        .search-bar .btns{
            height: 30px;
            line-height: 30px;
            background: #6866E9;
            opacity: 0.7;
            filter: alpha(opacity=70);
            border-radius: 15px;
        }
        .search-bar .btns:hover{
            opacity: 1;
            filter: alpha(opacity=100);
        }
        .layui-table {
            width: 90%;
            margin: 0 auto;
        }
        .search-bar .treeWrap{
            width: 202px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
<!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
<!--[if lt IE 9]>
<script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
<script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
<div class="search-bar layui-form">
    <div class="layui-inline distance">
        <input type="text" placeholder="请输入物品条码或者物品名称关键字" class="layui-input keyword">
    </div>
    <div class="layui-inline treeWrap">
        <input type="text" placeholder="请选择物品分类" class="layui-input" id="categoryId">
        <div class="categoryTree" id="categoryTree"></div>
    </div>
    <button class="layui-btn btns" id="search-btn">搜索</button>
    <button class="layui-btn btns" id="sure-btn" data-type="getCheckData">添加</button>
</div>

<table class="layui-table" id="asset-table"></table>

</body>
<script src="../../layui/layui.js"></script>
<script src="../../js/peizhi.js"></script>
<script>
    layui.use(['jquery','table','tree'],function(){
        var $ = layui.jquery;
        var table = layui.table;

        //类别树
        $.ajax({
            type:"get",
            url:ApiUrl+"zhConsumableCategory/getCategoryList",
            async:true,
            success:function(res){
                layui.tree({
                    elem: '#categoryTree' //传入元素选择器
                    ,nodes: res.data
                    ,skin:'shihuang'
                    ,click: function(node){
                        $("#categoryTree").hide();
                        $("#categoryId").val(node.name);
                        $("#categoryId").attr('categoryidPath',node.parentidPath);
                    }
                });
            }
        });
        //资产分类选择
        $("#categoryId").on('click', function(){
            $("#categoryTree").show();
        });
        //树点击收起
        $(document).bind('click', function(e) {       //点击事件
            var e = e || window.event; //浏览器兼容性
            var elem = e.target || e.srcElement;
            while (elem) { //循环判断至跟节点，防止点击的是div子元素
                if (elem.id && (elem.id == 'categoryId' || elem.id == "categoryTree")) {
                    return;
                }
                elem = elem.parentNode;
            }
            $('#categoryTree').hide();
        });
        //加载选择初始数据
        searchData();
        //条件查询选择数据
        $('.search-bar #search-btn').on('click',function(){
            searchData();
        });
        //领用搜索资产
        function searchData(){
            table.render({
                elem: '#asset-table'
                ,id: 'assetTable'
                ,url:ApiUrl+"zhConsumable/getZhConsumableListPage"
                ,where: {
                    consumableName: $(".search-bar .keyword").val(),
                    categoryidPath: $("#categoryId").attr('categoryidPath')
                }
                ,cols: [[ //标题栏
                    {checkbox: true}
                    ,{field: 'consumableCode', title: '物品编码', width: 170}
                    ,{field: 'consumableName', title: '物品名称', width: 100}
                    ,{field: 'stockNum', title: '库存数量', width: 100}
                    ,{field: 'categoryName', title: '物品类别', width: 120}
                    ,{field: 'specification', title: '规格型号', width: 120}
                    ,{field: 'brand', title: '品牌', width: 100}
                    ,{field: 'unit', title: '单位', width: 100}
                    ,{field: 'price', title: '单价', width: 100}
                ]]
                ,skin: 'row' //表格风格
                ,page: true //是否显示分页
                ,limits: [5,10,15]
                ,limit: 5 //每页默认显示的数量
            });
        }
    });
</script>
</html>
